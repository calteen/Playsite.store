    </div>
      <% } %>



        <ul class="movies-list">


          <% for(var i=0; i < data.length; i++) { %>
<!-- <%= data[i]%> -->
            <li>
              <div class="movie-card">

                <a href="/app/<%= data[i]._id %>">
                  <figure class="card-banner">
                    <% if(data[i].thumbnail){ %>
                      <img src="<%= url %>/<%= data[i].thumbnail %>" alt="<%= data[i].title %>">

                      <% } else if(data[i].logo){ %>
                        <img src="<%= url %>/<%= data[i].logo %>" alt="<%= data[i].title %>">

                        <% } else{ %>

                          <img src="/assets/images/no-img.webp" alt="<%= data[i].title %>">

                          <% } %>






                  </figure>
                </a>

                <div class="title-wrapper" >
                  <a id="text" href="./movie-details.html">
                    <h3 class="card-title">
                       <%=data[i].title%> 
                    </h3>
                  </a>
                
                  <button onclick="removefromcart('<%=data[i]._id%>')">
                    <i class='bx bx-message-square-x' style="
                    font-size: 25px;
                    color: white;
                "></i>
                  </button>
                </div>













                <div class="card-meta">

                
                  <div class="duration">


                  </div>

                  <div class="rating">

                  </div>
                </div>

              </div>
            </li>

            <% } %>






        </ul>



        <script>
          let removefromcart = async (x)=>{
            let data = {gameId: x};
            await fetch("/user/remove-cart", {
          method: "POST",
          headers: {'Content-Type': 'application/json'}, 
          body: JSON.stringify(data)
        }).then((response) => {
          // console.log(response);
           window.location.reload();
        });
          }
        </script>
        
