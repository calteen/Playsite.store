}

.text {
font: 400 1em/2.5em "Muli", arial, sans-serif;
color: #ccc;
cursor: pointer;
}





#modal {
position: absolute;
background: white;
border: 1px solid #d9d9d9;
box-shadow: 0 0 0.25em #ccc;
}



.animate {
animation: bounce 0.5s;
}

@keyframes bounce {
from, 20%, 40%, 60%, 80%, to {
animation-timing-function: cubic-bezier(0.215, 0.61, 0.355, 1);
}
20% {
transform: scale3d(1.1, 1.1, 1.1);
}
40% {
transform: scale3d(0.9, 0.9, 0.9);
}
60% {
transform: scale3d(1.03, 1.03, 1.03);
}
80% {
transform: scale3d(0.97, 0.97, 0.97);
}
to {
transform: scale3d(1, 1, 1);
}
}
</style>









<script>
        // Use SVGs
emojione.imageType = "svg";

var emojis = document.querySelectorAll(".emoji");
var modal = document.getElementById("modal");

for(i = 0; i < emojis.length; i++) {

// Convert emojis
emojis[i].innerHTML = emojione.toImage(emojis[i].innerHTML);

// Add actions on click
emojis[i].parentNode.addEventListener("click", function(event) {
var _self = this;

// Make sure nothing is opened yet
if(modal.classList.contains("hidden")) {

    // If share buttons are active, open modal after 1s
    if(!document.getElementById("none").checked) {
        setTimeout(function() {

            // Tooltips
            if(document.getElementById("tooltip").checked) {
                var target = _self.getBoundingClientRect();
                modal.style.left = target.left + target.width/2 - 150 + "px";
                modal.style.top = target.top + target.height + 10 + "px";
                modal.classList.add("tooltip");
            }

            // Popups
            else {
                modal.style.left = 0;
                modal.style.top = 0;
                modal.classList.add("popup");
            }

            // Add emotion to modal text
            document.getElementById("modalcontent").innerText = "Let your friends know why you feel " + _self.querySelectorAll(".text")[0].innerText + ".";

            // display modal and animate
            modal.classList.remove("hidden");
            modal.classList.add("animate");
        }, 1000);
    }
    
    // counter + 1
    var counter = parseInt(this.querySelectorAll(".count")[0].innerText) + 1;
    _self.querySelectorAll(".count")[0].innerText = counter;
    _self.querySelectorAll(".count")[0].classList.add("animate");
    
    // Remove animation class to allow second animation if necessary
    setTimeout(function() {
        _self.querySelectorAll(".reactions--count")[0].classList.remove("animate");
                }, 600);
}
});
}

// Close modal and reset classes

</script>





